<%=@question.title%>
<p>
  <%=@question.description%>
</p>
<h2>User Answers</h2>
<ul>
  <%@question.answers.each do |answer|%>
    <li><%=answer.description%></li>
  <%end%>
</ul>
<h2>Answer this question:</h2>
<%=form_for ([@question, @answer]) do |f| %>
  <div>
    <%= f.label :description%>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit "Submit Answer"%>
  </div>
<%end%>
